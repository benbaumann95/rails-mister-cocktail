<div style="width:100%;height:0;padding-bottom:70%;position:relative;">
  <iframe src="https://giphy.com/embed/3o7TKDhgKC52OZhV0k" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen>
  </iframe>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.present? %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 1200, width: 1200, crop: :fill %>')">
          <div class="card-content">
            <div class="card-name">
              <%= link_to cocktail.name, cocktail %>
            </div>
          </div>
          <br>
        </div>
      </div>
      <% else %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://via.placeholder.com/300?text=Placeholder.com+rocks!')">
          <div class="card-content">
            <div class="card-name">
              <%= cocktail.name %>
            </div>
          </div>
          <br>
        </div>
      </div>
      <% end %>
    <% end %>

  </div>
</div>





